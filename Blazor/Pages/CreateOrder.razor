@page "/CreateOrder"
@using Blazor.Data
@using Entities.Models
@using ItemLocationSelecterComponent
@inject IOrderHandler _orderHandler
@inject NavigationManager _navigationManager

<h3>CreateOrder</h3>

<RadzenTemplateForm class="RegisterForm" TItem="Order" Data="@_order" Submit="@CreateNewOrder">
    <div class="row">
        <div class="col-md-5">
            <RadzenFieldset Text="Item Information">
                <div class="row">
                    <div class="col-md-4 align-items-center d-flex">
                        <RadzenLabel Text="Item Name"/>
                    </div>
                    <div class="col-md-8">
                       
                    </div>
                </div>
                
                <ItemLocationSelecter showLocationDetail="false"/>
                
                <div class="col-md-12 d-flex align-items-end justify-content-center" style="margin-top: 16px;">
                    <RadzenButton class="formButton" ButtonType="ButtonType.Submit" Icon="save" Text="Save"/>
                </div>
            </RadzenFieldset>
        </div>
    </div>
</RadzenTemplateForm>



